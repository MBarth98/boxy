{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "install dependencies for frontend",
            "type": "npm",
            "script": "install",
            "path": "frontend/Boxy",
            "detail": "npm install - you may need to terminate it manually"
        },
        {
            "label": "launch frontend",
            "type": "npm",
            "script": "start",
            "path": "frontend/Boxy",
            "detail": "host the web server locally on port 4200"
        },
        {
            "label": "dotnet build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/backend/API/API.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet run",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/backend/API/API.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet restore",
            "command": "dotnet",
            "type": "process",
            "args": [
                "restore",
                "${workspaceFolder}/backend/API/API.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/backend/API/API.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}